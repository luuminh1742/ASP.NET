<header class="header-desktop">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="header-wrap">
                <div class="form-header" action="" method="">
                    <input class="au-input au-input--xl" 
                           type="text" name="search" id="search" 
                           placeholder="Tìm kiếm sản phẩm ...." />
                    <button class="au-btn--submit" type="button"
                            onclick="clickSearch()" id="btnSearch">
                        <i class="zmdi zmdi-search"></i>
                    </button>
                </div>
                <div class="header-button">
                    <div class="noti-wrap">
                        <div class="noti__item js-item-menu">
                            <i class="zmdi zmdi-notifications"></i>
                            <span class="quantity">3</span>
                            <div class="notifi-dropdown js-dropdown rounded mt-2">
                                <div class="notifi__title">
                                    <p>Bạn có 3 thông báo mới</p>
                                </div>
                                <div class="notifi__item">
                                    <div class="bg-c1 img-cir img-40">
                                        <i class="zmdi zmdi-email-open"></i>
                                    </div>
                                    <div class="content">
                                        <p>Bạn có 3 thông báo mới</p>
                                        <span class="date">April 12, 2018 06:50</span>
                                    </div>
                                </div>
                                <div class="notifi__item">
                                    <div class="bg-c2 img-cir img-40">
                                        <i class="zmdi zmdi-account-box"></i>
                                    </div>
                                    <div class="content">
                                        <p>Khách hàng abc đã đánh giá sản phẩm <b>Máy giặt lồng ngang Toshiba Inverter</b></p>
                                        <span class="date">April 12, 2018 06:50</span>
                                    </div>
                                </div>
                                <div class="notifi__item">
                                    <div class="bg-c3 img-cir img-40">
                                        <i class="zmdi zmdi-file-text"></i>
                                    </div>
                                    <div class="content">
                                        <p>Khách hàng abc đã đánh giá sản phẩm <b>Máy giặt lồng ngang Toshiba Inverter</b></p>
                                        <span class="date">April 12, 2018 06:50</span>
                                    </div>
                                </div>
                                <div class="notifi__footer">
                                    <a href="#">Tất cả thông báo</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="account-wrap">
                        <div class="account-item clearfix js-item-menu">
                            <div class="image rounded-circle">
                                @if (Session["Avatar"] != null)
                                {
                                    <img width="45" height="45" class="rounded-circle"
                                         src="@Url.Content("~/wwwroot/imageUpload/"+Session["Avatar"])" alt="">
                                }
                                else
                                {
                                    <img src="~/Areas/Admin/Assets/images/icon/avatar-01.jpg" alt="Vạn Xuân" />
                                }

                            </div>
                            <div class="content">
                                <a class="js-acc-btn" href="#">@Session["FullName"]</a>
                            </div>
                            <div class="account-dropdown js-dropdown rounded mt-2">
                                <div class="info clearfix">
                                    <div class="image rounded-circle">
                                        <a href="@Url.Action("Index","Account")">
                                            @if (Session["Avatar"] != null)
                                            {
                                                <img width="45" height="45" class="rounded-circle"
                                                     src="@Url.Content("~/wwwroot/imageUpload/"+Session["Avatar"])" alt="">
                                            }
                                            else
                                            {
                                                <img src="~/Areas/Admin/Assets/images/icon/avatar-01.jpg" alt="Vạn Xuân" />
                                            }
                                        </a>
                                    </div>
                                    <div class="content">
                                        <h5 class="name">
                                            <a href="@Url.Action("Index","Account")">@Session["FullName"]</a>
                                        </h5>
                                        <span class="email">@Session["Email"]</span>
                                    </div>
                                </div>
                                <div class="account-dropdown__body">
                                    <div class="account-dropdown__item">
                                        <a href="@Url.Action("Index","Account")">
                                            <i class="zmdi zmdi-account"></i>Tài Khoản
                                        </a>
                                    </div>
                                </div>
                                <div class="account-dropdown__footer">
                                    <a href="@Url.Action("Logout","Home")">
                                        <i class="zmdi zmdi-power"></i>Đăng Xuất
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
