<body class="">
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        @{
            Html.RenderPartial("_HeaderMobile");
        }
        <!-- END HEADER MOBILE-->
        <!-- MENU SIDEBAR-->
        @{
            Html.RenderPartial("_Sidebar");
        }
        <!-- END MENU SIDEBAR-->
        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            @{
                Html.RenderPartial("_HeaderDesktop");
            }
            <!-- HEADER DESKTOP-->
            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        @RenderBody()
                        <div class="row">
                            <div class="col-md-12">
                                <div class="copyright">
                                    <p>Copyright © 2021 by <b>Nhóm 6 - CNTT01 - K13 - HaUI</b>.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END MAIN CONTENT-->
            <!-- END PAGE CONTAINER-->
        </div>

    </div>
    @RenderSection("modal", required: false)
    
    <!-- Bootstrap JS-->
    <script src="~/Areas/Admin/Assets/vendor/bootstrap-4.1/popper.min.js"></script>
