        //Kiểm tra trang khi cập nhận trạng thái tự cập nhật lại trang
        function CheckPage(checkpage, kt) {
            $.ajax({
                url: '/Admin/Orders/NewBill',
                type: "GET",
                data: { kt: kt, page: checkpage },
                dataType: "json",
                contentType: "application/json;charset=utf-8",
                success: function (result) {
                    if (kt == 0 && result.totalPageCount < checkpage && checkpage>1) {
                        page1 = page1 - 1;
                    }
                    if (kt == 1 && result.totalPageCount < checkpage && checkpage > 1) {
                        page2 = page2 - 1;
                    }
                }
            });
        }


