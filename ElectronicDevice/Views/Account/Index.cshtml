                <div id="my-order" class="container tab-pane fade">
                    <br>
                    <h3>Đơn hàng của tôi</h3>
                    <br>
                    <hr>
                    <div id="newBill">
                        @*Bills*@
                    </div>
                    <div>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Mã đơn hàng</th>
                                    <th scope="col">Ngày mua</th>
                                    <th scope="col">Sản phẩm</th>
