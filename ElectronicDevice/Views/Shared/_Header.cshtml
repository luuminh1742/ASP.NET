<header class="main_menu home_menu" id="my_header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <a class="navbar-brand" href="@Url.Action("Index","Home")">
                        <img class="logo" src="~/wwwroot/img/my-logo/logo-asp.net.png" alt="logo"
                             width="150">
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse"
                            data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="menu_icon"><i class="fas fa-bars"></i></span>
                    </button>

                    <div class="collapse navbar-collapse main-menu-item" id="navbarSupportedContent">
                        <ul class="navbar-nav stroke" id="mainNav">
                            @*<li class="nav-item @(
                                    ViewContext.RouteData.Values["Controller"].ToString() != "Home" ?"":
                                    ViewContext.RouteData.Values["Action"].ToString()== "Index" ?"my-menu-active" : ""
                                    )">
                                    <a class="nav-link" href="@Url.Action("Index","Home")">Trang chủ</a>
                                </li>*@
                            <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Product" ?"my-menu-active" : "")">
                                <a class="nav-link" href="@Url.Action("Index","Product")">Trang chủ</a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link" href="#">Tin tức</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Khuyến mãi</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Liên hệ</a>
                            </li>
                            <li class="nav-item @(
                            ViewContext.RouteData.Values["Controller"].ToString()!= "Home"?"":
                            ViewContext.RouteData.Values["Action"].ToString()== "Introduce" ? "my-menu-active" : "")">
                                <a class="nav-link" href="@Url.Action("Introduce","Home")">Giới thiệu</a>
                            </li>

                        </ul>



                    </div>
                    <div class="hearer_icon d-flex">
                        @*<a class="align-self-center" id="search_1" href="javascript:void(0)"><i class="align-self-center ti-search"></i></a>*@

                        <div class="align-self-center cart">
                            <a class="text-center" href="@Url.Action("Index","Cart")">
                                <i class="fas fa-cart-plus"></i>
                            </a>
                        </div>

                        @if (Session["UserName"] != null)
                        {
                            <div class="dropdown ml-4">
                                <a class="dropdown-toggle" href="" id="navbarDropdown3" role="button"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @if (Session["Avatar"] != null)
                                    {
                                        <img width="35" height="35" class="rounded-circle"
                                             src="@Url.Content("~/wwwroot/imageUpload/"+Session["Avatar"])" alt="">
                                    }
                                    else
                                    {
                                        <img width="35" height="35" class="rounded-circle"
                                             src="http://m.myclip.vn/images/avatar.gif" alt="">
                                    }
                                    &nbsp;
                                    @Session["FullName"]
                                    <!-- <i class="fas fa-user-circle"></i> -->
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown"
                                     style="background-color: #D1FDFF !important; ">
                                    <div class="p-2 rounded-5">
                                        <div class="p-1 dropdown-menu-item">
                                            <a href="@Url.Action("Index", "Account")"><i class="fas fa-user-alt ml-0">  Quản lý tài khoản</i></a>
                                        </div>

                                        <div class="p-1 dropdown-menu-item">
                                            <a href="@Url.Action("Logout", "Login")">
                                                <i class="fas fa-sign-out-alt ml-0">  Đăng xuất</i>
                                            </a>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        }
                        else
                        {
                            <div style="margin-left: 30px; background: #ff443a; border-radius: 30px; padding: 10px;">
                                <a style=" color: #fff;" href="@Url.Action("Index", "Login")">
                                    Đăng nhập
                                </a>
                            </div>
                        }

                    </div>
                </nav>
            </div>
        </div>
    </div>
    @*<div class="search_input" id="search_input_box">
            <div class="container ">
                <form class="d-flex justify-content-between search-inner">
                    <input type="text" class="form-control" id="search_input" placeholder="Tìm kiếm sản phẩm">
                    <button type="submit" class="btn"></button>
                    <span class="ti-close" id="close_search" title="Close Search"></span>
                </form>
            </div>
        </div>*@
</header>
