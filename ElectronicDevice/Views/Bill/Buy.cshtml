@model ElectronicDevice.Models.Cart


@using System.Globalization;
@{
    CultureInfo cul = CultureInfo.GetCultureInfo("vi-VN");
    var id_account = Session["ID"];
}

@{
    ViewBag.Title = "Thanh toán";
    ViewBag.id_account = Session["ID"];
    var cart = ViewBag.cart as ElectronicDevice.Models.Cart;
    var status = ViewBag.status;
}


<!-- breadcrumb start-->
<section class="breadcrumb breadcrumb_bg" id="my_banner">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <h2>Đặt hàng</h2>
                        <p>Trang chủ <span>></span> Đặt hàng</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <img src="~/wwwroot/img/my-image/banner/buy.png" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb start-->

<div class="container mt-3 bg-white p-4">
    <div class="row">
        <div class="col-md-8">
            <h3>Thông tin người nhận</h3>
            <br>
            @if (status == "BuyNow")
            {
                <form>
                    <div class="form-group row">
                        <label for="fullname" class="col-md-3">Họ tên người nhận</label>
                        <input type="text" class="form-control col-md-9" id="fullname" placeholder="Họ tên"
                               value="@cart.Account.FullName.Trim()">
                    </div>
                    <div class="form-group row">
                        <label for="email" class="col-md-3">Email</label>
                        <input type="email" class="form-control col-md-9" id="email" placeholder="Họ tên"
                               value="@cart.Account.Email.Trim()">
                    </div>
                    <div class="form-group row">
                        <label for="phone" class="col-md-3">Số điện thoại</label>
                        <input type="text" class="form-control col-md-9" id="phone" placeholder="Số điện thoại"
                               value="@cart.Account.Phone.Trim()">
                    </div>
                    <div class="form-group row">
                        <label for="address" class="col-md-3">Địa chỉ</label>
                        <input type="text" class="form-control col-md-9" id="address" placeholder="Địa chỉ"
                               value="@cart.Account.Address.Trim()">
                    </div>
                    <div class="form-group row">
                        <label for="note" class="col-md-3">Ghi chú</label>
                        <textarea name="note" id="note" rows="5" placeholder="Ghi chú" class="form-control col-md-9"></textarea>
                    </div>
                    <br>
                    <hr>
                    <h3>Hình thức thanh toán</h3>
                    <input type="radio" name="pay-type" id="1" checked>
                    <label for="1">Thanh toán khi nhận hàng</label>
                    <br>
                    <input type="radio" name="pay-type" id="2">
                    <label for="2">Thanh toán online qua thẻ ngân hàng</label>

                    <hr>
                    <h3 id="totalPay">Tổng tiền phải trả:   <span style="color: #ff3368">@String.Format(cul, "{0:N0}", @cart.Product.Price * @cart.Amount) VND </span></h3>
                    <hr>
                    <div class="form-group">
                        <a href="@Url.Action("Index","Bill")" class="genric-btn danger circle">Thanh toán</a>
                    </div>
                </form>
            }
            else
            {
                <form>
                    <div class="form-group row">
                        <label for="fullname" class="col-md-3">Họ tên người nhận</label>
                        <input type="text" class="form-control col-md-9" id="fullname" placeholder="Họ tên"
                               value="@cart.Account.FullName.Trim()">
                    </div>
                    <div class="form-group row">
                        <label for="email" class="col-md-3">Email</label>
                        <input type="email" class="form-control col-md-9" id="email" placeholder="Họ tên"
                               value="@cart.Account.Email.Trim()">
                    </div>
                    <div class="form-group row">
                        <label for="phone" class="col-md-3">Số điện thoại</label>
                        <input type="text" class="form-control col-md-9" id="phone" placeholder="Số điện thoại"
                               value="@cart.Account.Phone.Trim()">
                    </div>
                    <div class="form-group row">
                        <label for="address" class="col-md-3">Địa chỉ</label>
                        <input type="text" class="form-control col-md-9" id="address" placeholder="Địa chỉ"
                               value="@cart.Account.Address.Trim()">
                    </div>
                    <div class="form-group row">
                        <label for="note" class="col-md-3">Ghi chú</label>
                        <textarea name="note" id="note" rows="5" placeholder="Ghi chú" class="form-control col-md-9"></textarea>
                    </div>
                    <br>
                    <hr>
                    <h3>Hình thức thanh toán</h3>
                    <input type="radio" name="pay-type" id="1" checked>
                    <label for="1">Thanh toán khi nhận hàng</label>
                    <br>
                    <input type="radio" name="pay-type" id="2">
                    <label for="2">Thanh toán online qua thẻ ngân hàng</label>

                    <hr>
                    <h3 id="totalPay">Tổng tiền phải trả:   <span style="color: #ff3368">@String.Format(cul, "{0:N0}", @cart.Product.Price * @cart.Amount) VND </span></h3>
                    <hr>
                    <div class="form-group">
                        <a href="@Url.Action("Index","Bill")" class="genric-btn danger circle">Thanh toán</a>
                    </div>
                </form>
            }

        </div>
        <div class="col-md-4">
            <h3>Chi tiết sản phẩm</h3>
            <br>
            @if (status == "BuyNow")
            {
                <div class="d-flex flex-row">
                    <img src="@Url.Content("~/wwwroot/imageUpload/"+cart.Product.Image)" alt="" width="100" height="100">
                    <div class="ml-2">
                        <h5>@cart.Product.Name</h5>
                        <p>Giá: <span style="color: #ff3368">@String.Format(cul, "{0:N0}", @cart.Product.Price) VND </span></p>
                        <p>Số lượng: <span style="color: #ff3368">@cart.Amount cái</span></p>
                    </div>

                </div>
                <hr />
            }
            else
            {
                <div class="d-flex flex-row">
                    <img src="https://cdn.mediamart.vn/Product/thumb_-9ZWE58.jpg" alt="" width="100" height="100">
                    <div class="ml-2">
                        <h5>Điều Hòa Gree 1 Chiều 9000BTU GWC09KB-K6N0C4</h5>
                        <p>Giá: 10.000.000đ</p>
                        <p>Số lượng: 1</p>
                    </div>

                </div>
                <hr>
                <div class="d-flex flex-row">
                    <img src="https://cdn.mediamart.vn/Product/thumb_-QKs992.png" alt="" width="100" height="100">
                    <div class="ml-2">
                        <h5>Tủ Lạnh Sharp SJ-X281E-SL - 271 Lít (Bạc Thép Không Gỉ)</h5>
                        <p>Giá: 4.000.000đ</p>
                        <p>Số lượng: 1</p>
                    </div>
                </div>
            }
        </div>

    </div>
</div>


@section script{
    <script>

        $(document).ready(function () {

        });

    </script>
}
