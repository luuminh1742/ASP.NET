
@{
    ViewBag.Title = "Buy";
}
<!doctype html>
<html lang="zxx">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Thanh toán | Electronic Device</title>
    <link rel="icon" href="~/wwwroot/img/my-logo/logo-asp.net.png">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/wwwroot/css/bootstrap.min.css">
    <!-- animate CSS -->
    <link rel="stylesheet" href="~/wwwroot/css/animate.css">
    <!-- owl carousel CSS -->
    <link rel="stylesheet" href="~/wwwroot/css/owl.carousel.min.css">
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="~/wwwroot/css/all.css">
    <!-- flaticon CSS -->
    <link rel="stylesheet" href="~/wwwroot/css/flaticon.css">
    <link rel="stylesheet" href="~/wwwroot/css/themify-icons.css">
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="~/wwwroot/css/magnific-popup.css">
    <!-- swiper CSS -->
    <link rel="stylesheet" href="~/wwwroot/css/slick.css">
    <!-- style CSS -->
    <link rel="stylesheet" href="~/wwwroot/css/style.css">
    <!-- My style -->
    <link rel="stylesheet" href="~/wwwroot/css/my-style-menu.css">
    <link rel="stylesheet" href="~/wwwroot/css/my-style.css">
</head>

<body>
    <!-- breadcrumb start-->
    <section class="breadcrumb breadcrumb_bg"  id="my_banner">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 text-center">
                    <div class="breadcrumb_iner">
                        <div class="breadcrumb_iner_item">
                            <h2>Đặt hàng</h2>
                            <p>Trang chủ <span>></span> Đặt hàng</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 text-center">
                    <div class="breadcrumb_iner">
                        <div class="breadcrumb_iner_item">
                            <img src="~/wwwroot/img/my-image/banner/buy.png" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb start-->

    <div class="container mt-3 bg-white p-4">
        <div class="row">
            <div class="col-md-8">
                <h3>Thông tin người nhận</h3>
                <br>
                <form>

                    <div class="form-group row">
                        <label for="fullname" class="col-md-3">Họ tên người nhận</label>
                        <input type="text" class="form-control col-md-9" id="fullname" placeholder="Họ tên"
                               value="Nguyễn Văn A">
                    </div>
                    <div class="form-group row">
                        <label for="email" class="col-md-3">Email</label>
                        <input type="email" class="form-control col-md-9" id="email" placeholder="Họ tên"
                               value="abc@eee.com">
                    </div>
                    <div class="form-group row">
                        <label for="phone" class="col-md-3">Số điện thoại</label>
                        <input type="number" class="form-control col-md-9" id="phone" placeholder="Số điện thoại"
                               value="0999888777">
                    </div>
                    <div class="form-group row">
                        <label for="address" class="col-md-3">Địa chỉ</label>
                        <input type="text" class="form-control col-md-9" id="address" placeholder="Địa chỉ"
                               value="Nhổn - Đại học công nghiệp Hà Nội">
                    </div>
                    <div class="form-group row">
                        <label for="note" class="col-md-3">Ghi chú</label>
                        <textarea name="note" id="note" rows="5" placeholder="Ghi chú" class="form-control col-md-9"></textarea>
                    </div>
                    <br>

                    <hr>

                    <h3>Hình thức thanh toán</h3>

                    <input type="radio" name="pay-type" id="1" checked>
                    <label for="1">Thanh toán khi nhận hàng</label>
                    <br>
                    <input type="radio" name="pay-type" id="2">
                    <label for="2">Thanh toán online qua thẻ ngân hàng</label>

                    <hr>
                    <h3>Tổng tiền phải trả: 20.000.000đ</h3>
                    <hr>
                    <div class="form-group">
                        <a href="@Url.Action("Index","Bill")" class="genric-btn danger circle">Thanh toán</a>

                    </div>
                </form>
            </div>
            <div class="col-md-4">
                <h3>Chi tiết sản phẩm</h3>
                <br>
                <div class="d-flex flex-row">
                    <img src="https://cdn.mediamart.vn/Product/thumb_-9ZWE58.jpg" alt="" width="100" height="100">
                    <div class="ml-2">
                        <h5>Điều Hòa Gree 1 Chiều 9000BTU GWC09KB-K6N0C4</h5>
                        <p>Giá: 10.000.000đ</p>
                        <p>Số lượng: 1</p>
                    </div>

                </div>
                <hr>
                <div class="d-flex flex-row">
                    <img src="https://cdn.mediamart.vn/Product/thumb_-QKs992.png" alt="" width="100" height="100">
                    <div class="ml-2">
                        <h5>Tủ Lạnh Sharp SJ-X281E-SL - 271 Lít (Bạc Thép Không Gỉ)</h5>
                        <p>Giá: 4.000.000đ</p>
                        <p>Số lượng: 1</p>
                    </div>
                </div>

            </div>

        </div>
    </div>

    <!-- jquery plugins here-->
    <!-- jquery -->
    <script src="~/wwwroot/js/jquery-1.12.1.min.js"></script>
    <!-- popper js -->
    <script src="~/wwwroot/js/popper.min.js"></script>
    <!-- bootstrap js -->
    <script src="~/wwwroot/js/bootstrap.min.js"></script>
    <!-- easing js -->
    <script src="~/wwwroot/js/jquery.magnific-popup.js"></script>
    <!-- swiper js -->
    <script src="~/wwwroot/js/swiper.min.js"></script>
    <!-- swiper js -->
    <script src="~/wwwroot/js/masonry.pkgd.js"></script>
    <!-- particles js -->
    <script src="~/wwwroot/js/owl.carousel.min.js"></script>
    <script src="~/wwwroot/js/jquery.nice-select.min.js"></script>
    <!-- slick js -->
    <script src="~/wwwroot/js/slick.min.js"></script>
    <script src="~/wwwroot/js/jquery.counterup.min.js"></script>
    <script src="~/wwwroot/js/waypoints.min.js"></script>
    <script src="~/wwwroot/js/contact.js"></script>
    <script src="~/wwwroot/js/jquery.ajaxchimp.min.js"></script>
    <script src="~/wwwroot/js/jquery.form.js"></script>
    <script src="~/wwwroot/js/jquery.validate.min.js"></script>
    <script src="~/wwwroot/js/mail-script.js"></script>
    <script src="~/wwwroot/js/stellar.js"></script>
    <script src="~/wwwroot/js/price_rangs.js"></script>
    <!-- custom js -->
    <script src="~/wwwroot/js/custom.js"></script>
</body>

</html>

